{
    "name": "laravelio/portal",
    "description": "The source code for the Laravel.io community portal.",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.1.3",
        "bugsnag/bugsnag-laravel": "^2.14",
        "doctrine/dbal": "^2.5",
        "fideloper/proxy": "^4.0",
        "guzzlehttp/guzzle": "^6.3",
        "laravel/framework": "5.6.*",
        "laravel/horizon": "^1.1",
        "laravel/socialite": "^3.0",
        "laravel/tinker": "^1.0",
        "laravelcollective/html": "5.6.*",
        "lasserafn/php-initial-avatar-generator": "^2.0",
        "league/commonmark": "^0.15.2",
        "predis/predis": "^1.1",
        "ramsey/uuid": "^3.7",
        "roave/security-advisories": "dev-master",
        "spatie/laravel-robots-middleware": "^1.0",
        "tijsverkoyen/akismet": "^1.1"
    },
    "require-dev": {
        "filp/whoops": "^2.1",
        "fzaninotto/faker": "^1.6",
        "jakub-onderka/php-console-highlighter": "^0.3.2",
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "laravel/browser-kit-testing": "^4.0",
        "laravel/homestead": "^7",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^2.0",
        "phpspec/phpspec": "^4.3",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "files": [
            "resources/helpers.php"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "start": [
            "composer install",
            "homestead make --no-after"
        ],
        "setup": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "php artisan key:generate",
            "php artisan migrate --seed",
            "yarn install",
            "yarn dev"
        ],
        "test": "phpunit --stop-on-failure",
        "spec": "phpspec run"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    }
}
